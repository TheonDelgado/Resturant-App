@page 
@model ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Resturants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm"  />
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach(var resturant in Model.Resturants)
    {
        <tr>
            <td>@resturant.Name</td>
            <td>@resturant.Location</td>
            <td>@resturant.Cuisine</td>
            <td>
                <a class="btn btn-lg" asp-page="./Details" asp-route-resturantId="@resturant.Id"> 
                    <i class="glyphicon glyphicon-zoom-in"></i>  
                </a>
                <a class="btn btn-lg" asp-page="./Edit" asp-route-resturantId="@resturant.Id"> 
                    <i class="glyphicon glyphicon-edit"></i>
                </a>
            </td>
        </tr>
    }
</table>

